<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="bt_card_form_icon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:paddingBottom">@dimen/bt_margin</item>
    </style>

    <style name="bt_field_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="bt_base_textview">
        <item name="android:textSize">@dimen/bt_input_text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="bt_text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:accessibilityLiveRegion" tools:targetApi="kitkat">polite</item>
    </style>

    <style name="bt_card_form_field" parent="bt_base_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:paddingTop">@dimen/bt_margin</item>
        <item name="android:textColorHint">@color/bt_light_gray</item>
        <item name="android:textCursorDrawable" tools:ignore="NewApi">@null</item>
    </style>

    <style name="bt_expiration_date_dialog_sheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/bt_expiration_date_dialog_sheet_animation</item>
    </style>

    <style name="bt_expiration_date_dialog_light" parent="bt_expiration_date_dialog_sheet">
        <item name="bt_expiration_date_sheet_background">@color/bt_expiration_date_sheet_background_light</item>
        <item name="bt_expiration_date_dialog_label">@color/bt_black_54</item>
        <item name="bt_expiration_date_dialog_divider">@color/bt_black_12</item>
        <item name="bt_expiration_date_scrollbar_thumb_vertical">@color/bt_black_54</item>
        <item name="bt_expiration_date_scrollbar_track_vertical">@color/bt_black_12</item>
    </style>

    <style name="bt_expiration_date_dialog_dark" parent="bt_expiration_date_dialog_sheet">
        <item name="bt_expiration_date_sheet_background">@color/bt_expiration_date_sheet_background_dark</item>
        <item name="bt_expiration_date_dialog_label">@color/bt_white_54</item>
        <item name="bt_expiration_date_dialog_divider">@color/bt_white_12</item>
        <item name="bt_expiration_date_scrollbar_thumb_vertical">@color/bt_white_54</item>
        <item name="bt_expiration_date_scrollbar_track_vertical">@color/bt_white_12</item>
    </style>

    <style name="bt_expiration_date_dialog_sheet_animation">
        <item name="android:windowEnterAnimation">@anim/bt_expiration_date_dialog_open</item>
        <item name="android:windowExitAnimation">@anim/bt_expiration_date_dialog_close</item>
    </style>

    <style name="bt_expiration_date_dialog_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/bt_expiration_date_sheet_label_padding_top</item>
        <item name="android:paddingBottom">@dimen/bt_expiration_date_sheet_label_padding_bottom</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/bt_expiration_date_dialog_label</item>
    </style>

    <style name="bt_expiration_date_dialog_grid_view">
        <item name="android:layout_marginLeft">@dimen/bt_expiration_date_sheet_left_right_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/bt_expiration_date_sheet_left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/bt_expiration_date_sheet_left_right_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/bt_expiration_date_sheet_left_right_margin</item>
        <item name="android:layout_marginBottom">@dimen/bt_expiration_date_sheet_top_bottom_margin</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:columnWidth">72dp</item>
    </style>

    <style name="bt_expiration_date_dialog_year_grid_view" parent="bt_expiration_date_dialog_grid_view">
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">8dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
    </style>

    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <!--   color for the app bar -->
        <item name="colorPrimary">@color/light_theme_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/light_theme_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/light_theme_accent</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--   color for the app bar -->
        <item name="colorPrimary">@color/dark_theme_primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/dark_theme_primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/dark_theme_accent</item>

        <item name="android:windowBackground">@color/background_material_dark</item>
        <item name="android:colorForeground">@color/foreground_material_dark</item>
        <item name="android:colorForegroundInverse">@color/foreground_material_light</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:colorBackgroundCacheHint">@color/abc_background_cache_hint_selector_material_dark</item>

        <item name="android:textColorPrimary">@color/abc_primary_text_material_dark</item>
        <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryDisableOnly">@color/abc_primary_text_disable_only_material_dark</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorSecondaryInverse">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_dark</item>
        <item name="android:textColorTertiaryInverse">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorHint">@color/bright_foreground_disabled_material_dark</item>
        <item name="android:textColorHintInverse">@color/bright_foreground_disabled_material_light</item>
        <item name="android:textColorHighlight">@color/highlighted_text_material_dark</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
        <item name="colorButtonNormal">@color/button_material_dark</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb_material_dark</item>

        <!-- Used by MediaRouter -->
        <item name="isLightTheme">false</item>
    </style>
</resources>